<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="twig.extension.shortcode" class="Miky\Bundle\CoreBundle\Twig\Extension\ShortcodeTwigExtension" public="false">
            <argument type="service" id="templating.helper.shortcode" />
            <tag name="twig.extension" />
        </service>

        <service id="templating.helper.shortcode" class="Miky\Bundle\CoreBundle\Helper\ShortcodeHelper" public="false">
            <argument type="service" id="miky.registry.shortcode" />
            <tag name="templating.helper" alias="shortcode" />
        </service>
        <service id="miky_core.shortcode.variable" class="Miky\Bundle\CoreBundle\Shortcode\VariableShortcode">
            <tag name="miky_shortcode" alias="var" />
        </service>
    </services>
</container>
