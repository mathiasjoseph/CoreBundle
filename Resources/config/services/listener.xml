<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="Miky\Bundle\CoreBundle\Doctrine\EventListener\TimestampableSubscriber"
                 id="miky_core.doctrine_event_listener.timestampable_subscriber">
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service class="Miky\Bundle\CoreBundle\Doctrine\EventListener\StatusSubscriber"
                 id="miky_core.doctrine_event_listener.status_subscriber">
            <tag name="doctrine.event_subscriber"/>
        </service>
    </services>

</container>
